#!/bin/bash

MEMORY_DECLARATION_POSITION=4
memory=( # WARNING: This line's position and MEMORY_DECLARATION_POSITION must be the same
"")

COLUMNS_IN_MEMORY=3
COLUMNS_IN_LIST=3
script=$0

createMainWindow() {
    zenity --entry                      \
           --title        "URL Manager" \
           --text         ""            \
           --entry-text   "Enter Key"   \
           --cancel-label "Quit"        \
           --ok-label     "Enter"       \
           --extra-button "Edit"
}

createEditWindow() {
    readMemory
    zenity --list                        \
           --radiolist                   \
           --title        "URL Manager"  \
           --text         "List of Keys" \
           --column       ""             \
           --column       "Key"          \
           --column       "Description"  \
           "${list[@]}"                  \
           --print-column "ALL"          \
           --cancel-label "Back"         \
           --ok-label     "Remove"       \
           --extra-button "Add"
}

createAddWindow() {
    zenity --forms                   \
           --title     "URL Manager" \
	       --text      ""            \
           --separator "\" \""       \
           --add-entry "URL"         \
           --add-entry "Key"         \
           --add-entry "Description"
}

openMainWindow() {
    value=$( createMainWindow )
    status=$?

    if [ "$value" = "Edit" ]
    then
        openEditWindow
    elif [ $status -eq 0 ]
    then
        openURL "$value"
    fi
}

openEditWindow() {
    value=$( createEditWindow )
    status=$?

    local memPos
    if [ "$value" = "Add" ]
    then
        openAddWindow
    elif [ $status -eq 0 ]
    then
        memPos=$( memoryPosition "$value" )
        deleteFromMemory $memPos & reload
    else
        openMainWindow
    fi
}

openAddWindow() {
    value=$( createAddWindow )
    status=$?

    if [ $status -eq 0 ]
    then
        saveToMemory "\"$value\" \\" & reload
    else
        openEditWindow
    fi
}

saveToMemory() {
    local top="$(head -n +$MEMORY_DECLARATION_POSITION $script)"
    local middle="$@"
    local bottom="$(tail -n +$(($MEMORY_DECLARATION_POSITION + 1)) $script)"
    echo "$top"     > $script
    echo "$middle" >> $script
    echo "$bottom" >> $script
}

deleteFromMemory() {
    if [ $1 ]
    then
        echo "$(sed $1d $script)" > $script
    fi
}

readMemory() {
    list=()
    local pos=1
    for value in "${memory[@]}"
    do
        if [ $(($pos % $COLUMNS_IN_MEMORY)) -eq 1 ]
        then
            list+=("FALSE")
        else
            list+=("$value")
        fi
        ((pos++))
    done
}

memoryPosition() {
    readMemory
    local id
    local pos=1
    for value in "${list[@]}"
    do
        if [ $(($pos % $COLUMNS_IN_LIST)) -eq 2 ]
        then
            id="$value"
        elif [ $(($pos % $COLUMNS_IN_LIST)) -eq 0 ]
        then
            id+="|$value"
            if [ "$id" = "$1" ]
            then
                zenity --info --text $( memoryPosition "$script" )
                echo $(((($pos) / $COLUMNS_IN_LIST) + $MEMORY_DECLARATION_POSITION))
            fi
        fi
        ((pos++))
    done
}

openURL() {
    local URL
    local pos=1
    for value in "${memory[@]}"
    do
        if [ $(($pos % $COLUMNS_IN_MEMORY)) -eq 1 ]
        then
            URL="$value"
        elif [ $(($pos % $COLUMNS_IN_MEMORY)) -eq 2 ]
        then
            if [ "${1^^}" = "${value^^}" ]
            then
                xdg-open "$URL"
            fi
        fi
        ((pos++))
    done
}

reload() {
    sleep 0.1s
    $script "reloaded"
}

if [ "$1" = "reloaded" ]
then
    openEditWindow
else
    openMainWindow
fi